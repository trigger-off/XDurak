{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "rootDir": "./src",
      "moduleResolution": "node",
      "outDir": "./dist",
      "removeComments": true,
      "noEmit": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    }
  }